<%- include('../partials/header') %>

<form action="/activities" method="POST">
  <fieldset>
    <div class="form-group">
      <label class="form-label mt-5">Date and Time</label>
      <input type="datetime-local" class="form-control" name="activitytime" id="activitytime" value= "today(this)"/>
    </div>
    <div class="form-group">
      <label class="form-label mt-2">Activity</label>
      <input type="text" name="activity" class="form-control">
    </div>
    <div class="form-group">
      <label class="form-label mt-2">Notes</label>
      <input type="text" name="note"  id="note" class="form-control">
    </div>
    <br>
     <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="priority" name="priority">
        <label class="form-check-label" for="flexSwitchCheckDefault">Top Priority</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Add Activity</button>
  </fieldset>
</form>

<p><%= errorMsg %></p>

<%- include('../partials/footer') %>