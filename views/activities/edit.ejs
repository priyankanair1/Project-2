<%- include('../partials/header') %>
<div class="container-main">
  <div class="row">
    <div class="col-6">
<br />
  <h4 align="center">Edit Actvities</h4>
  <% if(errorMsg) { %>
    <div class="alert alert-dismissible alert-primary">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong>Something went wrong !</strong> <p><%= errorMsg %></p>
    </div>
    <% } %>    
<form action="/activities/<%= activity._id%>?_method=PUT" method="POST">
  <fieldset>
    <div class="form-group">
      <label class="form-label mt-2">Date and Time <%= activitydate%></label>
      <input type="datetime-local" class="form-control" name="activitytime" id="activitytime" value="<%= activitydate %>"/>
    </div>
    <div class="form-group">
      <label class="form-label mt-2">Activity</label>
      <input type="text" name="activity" class="form-control" value="<%= activity.activity %> ">
    </div>
    <div class="form-group" name="notes-div" id="notes-div">
      <label class="form-label mt-2">Notes</label>      
      <% activity.notes.forEach(note => { %>
        <input type="text" name="notes" id="notes" class="form-control" placeholder="Note" value="<%=note%>">
        <% }); %>
    </div>
    <div class="row">    
      <div class="col-11"> 
        <h2 align="right"><a href="javascript:deleteNoteInput()" style="text-decoration: none;">-</a></h2>  
      </div>
      <div class="col-1"> 
        <h2 align="right"><a href="javascript:addNoteInput()" style="text-decoration: none;">+</a></h2>        
      </div>
    </div>
    <br>
    <br>
     <div class="form-check form-switch">

        <input class="form-check-input" type="checkbox" id="priority" name="priority">
        <label class="form-check-label" for="flexSwitchCheckDefault">Top Priority</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Update Activity</button>
  </fieldset>
</form>
<br>
    </div></div>
    
</div>

<%- include('../partials/footer') %>