<%- include('../partials/header') %>
<div class="container-main">
<br />
  <h4 align="center">Edit Actvities</h4>
  <% if(errorMsg) { %>
    <div class="alert alert-dismissible alert-primary">
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      <strong>Something went wrong !</strong> <p><%= errorMsg %></p>
    </div>
    <% } %>
    <br>

<form action="/activities" method="POST">
  <fieldset>
    <div class="form-group">
      <label class="form-label mt-5">Date and Time <%= activitydate%></label>
      <input type="datetime-local" class="form-control" name="activitytime" id="activitytime" value="<%= activitydate %>" />
    </div>
    <div class="form-group">
      <label class="form-label mt-2">Activity</label>
      <input type="text" name="activity" class="form-control" value="<%= activity.activity %> ">
    </div>
    <div class="form-group">
      <label class="form-label mt-2">Notes</label>
      <input type="text" name="notes" id="Notes" class="form-control"> + 
      <input type="text" name="notes" id="notes" class="form-control"> + 
    </div>
    <br>
     <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="priority" name="priority">
        <label class="form-check-label" for="flexSwitchCheckDefault">Top Priority</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Add Activity</button>
  </fieldset>
</form>
<br>
</div>

<%- include('../partials/footer') %>